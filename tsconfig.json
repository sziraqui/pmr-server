{
    "compilerOptions": {
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "moduleResolution": "node",
        "module": "commonjs",
        "target": "es6",
        "sourceMap": true,
        "outDir": "dist",
        "declaration": true,
        "forceConsistentCasingInFileNames": true,
        "noLib": false,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "lib": [
            "esnext"
        ]
    },
    "exclude": [
        "node_modules",
        "dist"
    ],
    "include": [
        "src"
    ]
}